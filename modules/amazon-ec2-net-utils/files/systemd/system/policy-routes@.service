[Unit]
Description=Set up policy routes for %I
StartLimitIntervalSec=10
StartLimitBurst=5
Wants=refresh-policy-routes@%i.timer

[Install]
Also=refresh-policy-routes@%i.timer

[Service]
Type=oneshot
RemainAfterExit=yes
PrivateTmp=yes
AmbientCapabilities=CAP_NET_ADMIN
NoNewPrivileges=yes
User=root
ExecStart=/opt/bin/setup-policy-routes %i start
Restart=on-failure
RestartSec=1
KillMode=process